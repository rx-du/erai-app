{
  "id": "anaphylaxis",
  "title": "Anaphylaxis",
  "category": [
    {
      "name": "Severity assessment",
      "sections": [
        {
          "title": "High Priority",
          "type": "text",
          "content": "Diabetes emergencies require immediate assessment and intervention. Blood glucose levels can be life-threatening."
        },
        {
          "title": "Mild Reaction",
          "type": "list",
          "items": ["Localized hives", "Mild itching", "Nasal congestion", "Mild GI upset"]
        },
        {
          "title": "Moderate Reaction",
          "type": "list",
          "items": ["Generalized hives", "Mild airway swelling", "Vomiting", "Anxiety"]
        },
        {
          "title": "Notes",
          "type": "text",
          "content": "Monitor closely, consider antihistamines. Prepare epinephrine, close monitoring."
        },
        {
          "title": "Severe Anaphylaxis",
          "type": "text",
          "content": "Requires immediate epinephrine injection and emergency medical support."
        }
      ]
    },
    {
      "name": "Professional reference",
      "sections": [
        {
          "title": "Blood Glucose Reference",
          "type": "list",
          "items": [
            "Normal: 70–140 mg/dL",
            "Hypoglycemia: <70 mg/dL",
            "Hyperglycemia: >180 mg/dL",
            "Critical High: >250 mg/dL",
            "DKA Range: >300 mg/dL + ketones"
          ]
        },
        {
          "title": "Treatment Protocols",
          "type": "list",
          "items": [
            "Oral glucose: 15–20g for conscious patients",
            "Glucagon: 1mg IM/SC for unconscious",
            "IV Dextrose: D50W 25g IV push",
            "Monitor q15min post-treatment",
            "ALS transport for severe cases"
          ]
        }
      ]
    },
    {
      "name": "Epinephrine dose",
      "sections": [
        {
          "title": "Adult",
          "type": "text",
          "content": "0.3–0.5mg IM"
        },
        {
          "title": "Child",
          "type": "text",
          "content": "0.01mg/kg IM (max 0.3mg)"
        },
        {
          "title": "Infant",
          "type": "text",
          "content": "0.1–0.15mg IM"
        }
      ]
    }
  ],
