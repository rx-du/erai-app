  "title": "Head injury",
  "category": [
    {
      "name": "Critical signs and immediate actions",
      "sections": [
        {
          "title": "Critical",
          "type": "text",
          "content": "Any decline in GCS, new focal deficits, or signs of herniation require immediate ALS intervention and trauma center transport!"
        },
        {
          "title": "Critical Signs",
          "type": "list",
          "items": [
            "Altered level of consciousness",
            "Unequal or non-reactive pupils",
            "Clear fluid from ears/nose (CSF leak)",
            "Raccoon eyes or Battle's sign",
            "Severe headache or vomiting"
          ]
        },
        {
          "title": "Immediate Actions",
          "type": "list",
          "items": [
            "Scene safety and C-spine control",
            "Glasgow Coma Scale assessment",
            "Airway management with C-spine",
            "Neurological baseline establishment",
            "Rapid transport preparation"
          ]
        }
      ]
    },
    {
      "name": "Professional first responder notes",
      "sections": [
        {
          "title": "Critical Transport Criteria",
          "type": "list",
          "items": [
            "GCS ≤13 or decline ≥2 points",
            "Loss of consciousness > 5 minutes",
            "Post-traumatic amnesia > 30 minutes",
            "Repeated vomiting (≥2 episodes)",
            "Seizures post-injury",
            "Focal neurological deficits"
          ]
        },
        {
          "title": "Management Priorities",
          "type": "list",
          "items": [
            "Maintain C-spine immobilization",
            "Prevent secondary brain injury",
            "Optimize oxygenation/ventilation",
            "Monitor for ICP signs",
            "Frequent neurological reassessment",
            "Transport to trauma center"
          ]
        }
      ]
    },
    {
      "name": "Glasgow Coma scale",
      "sections": [
        {
          "title": "Assessment Components",
          "type": "list",
          "items": [
            "Eye Opening (E1–4)",
            "Verbal Response (V1–5)",
            "Motor Response (M1–6)",
            "Total Score: 3–15",
            "Reassess every 15 minutes"
          ]
        }
      ]
    },
    {
      "name": "C-Spine management",
      "sections": [
        {
          "title": "Immobilization Steps",
          "type": "list",
          "items": [
            "Manual inline stabilization",
            "Cervical collar application",
            "Backboard or scoop stretcher",
            "Head blocks and straps",
            "Maintain alignment during transport"
          ]
        }
      ]
    }
  ],
