{
  "id": "opiate_overdose",
  "title": "Opiate overdose",
  "category": [
    {
      "name": "Recognition signs and critical actions",
      "sections": [
        {
          "title": "Critical",
          "type": "text",
          "content": "Comprehensive protocol for accidental opioid overdose response including NARCAN (naloxone) administration and recovery positioning. Designed for professional medical first responders, EMTs, and law enforcement personnel."
        },
        {
          "title": "Recognition signs",
          "type": "list",
          "items": [
            "Unconscious or unresponsive",
            "Slow, shallow, or absent breathing",
            "Blue lips, fingernails",
            "Gurgling or choking sounds",
            "Slow or weak pulse"
          ]
        },
        {
          "title": "Critical actions",
          "type": "list",
          "items": [
            "Scene safety assessment",
            "Immediate 911 activation",
            "Assessment of responsiveness",
            "Breathing & pulse evaluation",
            "Administer NARCAN if available"
          ]
        }
      ]
    },
    {
      "name": "NARCAN administration",
      "sections": [
        {
          "title": "Warning",
          "type": "text",
          "content": "NARCAN effects are temporary. Patient may re-overdose when it wears off!"
        },
        {
          "title": "Dosing guidelines",
          "type": "list",
          "items": [
            "Intranasal: 4mg per nostril",
            "IV/IM: 0.4–2mg initial dose",
            "Repeat every 2–3 minutes PRN",
            "Maximum 3 doses total",
            "Monitor for response/agitation"
          ]
        }
      ]
    },
    {
      "name": "Recovery position",
      "sections": [
        {
          "title": "Recovery position",
          "type": "list",
          "items": [
            "Place patient on side",
            "Extend bottom arm forward",
            "Bend top knee for stability",
            "Tilt head back slightly",
            "Monitor airway continuously"
          ]
        }
      ]
    },
    {
      "name": "Professional First Responder Notes",
      "sections": [
        {
          "title": "NARCAN (Naloxone) facts",
          "type": "list",
          "items": [
            "Opioid receptor antagonist",
            "Duration: 30–90 minutes",
            "May cause withdrawal symptoms",
            "Patient may become combative",
            "Re-odption possible after wearing off"
          ]
        },
        {
          "title": "Safety considerations",
          "type": "list",
          "items": [
            "Scene safety paramount",
            "Universal precautions always",
            "Be prepared for violent awakening",
            "Continue monitoring post-NARCAN",
            "Transport to hospital always required"
          ]
        }
      ]
    }
  ],
  "steps": [
    {
      "id": "opiate_overdose_protocol",
      "title": "Opiate overdose protocol",
      "category": "Toxicology Emergencies",
      "severity": "critical",
      "steps": [
        {
          "id": 1,
          "title": "Scene Safety Assessment",
          "subtitle": "Ensure scene is safe. Check for hazards, drug paraphernalia, or hostile individuals. Use universal precautions.",
          "timeframe": "Immediate",
          "type": "instruction",
          "status": "pending",
          "video": null
        },
        {
          "id": 2,
          "title": "Assess Responsiveness",
          "subtitle": "Tap shoulder firmly and shout. Check for response using sternal rub if needed. Look for signs of opioid overdose.",
          "timeframe": "Immediate",
          "type": "instruction",
          "status": "pending",
          "video": null
        },
        {
          "id": 3,
          "title": "Call Emergency Services",
          "subtitle": "Call 911 immediately. Report suspected opioid overdose and request ALS if available. Provide exact location.",
          "timeframe": "Immediate",
          "type": "action",
          "icon": "phone",
          "actionText": "Call 911",
          "status": "pending",
          "shouldDisplayEmergencyCall": true,
          "video": null
        },
        {
          "id": 4,
          "title": "Assess Breathing & Pulse",
          "subtitle": "Check for adequate breathing (rate >10/min, good depth). Assess pulse, skin color, look for cyanosis. Check Pupils (pin-point pupils sign of opiate overdose).",
          "timeframe": "Immediate",
          "type": "instruction",
          "status": "pending",
          "video": null
        },
        {
          "id": 5,
          "title": "Administer NARCAN (Naloxone)",
          "subtitle": "If available, give intranasal or 0.4–2mg IV/IM. May repeat every 2–3 minutes if no response. Max 3 doses.",
          "timeframe": "Immediate",
          "type": "instruction",
          "link": "NARCAN administration",
          "status": "pending",
          "video": null
        },
        {
          "id": 6,
          "title": "Airway Management",
          "subtitle": "Open airway using head-tilt, chin-lift. Clear visible obstructions. Consider OPA/NPA if trained.",
          "timeframe": "Immediate",
          "type": "instruction",
          "status": "pending",
          "video": null
        },
        {
          "id": 7,
          "title": "Rescue Breathing/Ventilation",
          "subtitle": "If breathing inadequate: provide rescue breaths with BVM or pocket mask. Rate 10–12/min for adults.",
          "timeframe": "Immediate",
          "type": "instruction",
          "status": "pending",
          "video": null
        },
        {
          "id": 8,
          "title": "Recovery Position",
          "subtitle": "If breathing adequately and unconscious, place in recovery position on side to prevent aspiration.",
          "timeframe": "Immediate",
          "type": "instruction",
          "link": "Recovery position",
          "status": "pending",
          "video": null
        },
        {
          "id": 9,
          "title": "CPR if Cardiac Arrest",
          "subtitle": "If no pulse, begin CPR immediately. 30:2 compression to ventilation ratio. Continue until ALS arrives.",
          "timeframe": "Immediate",
          "type": "alert",
          "link": "CPR protocol",
          "status": "pending",
          "shouldDisplayCprProtocol": true,
          "video": null
        },
        {
          "id": 10,
          "title": "Monitor Patient Response",
          "subtitle": "Watch for improvement after NARCAN. Be prepared for agitation or combativeness. Monitor vital signs.",
          "timeframe": "Immediate",
          "type": "monitor",
          "status": "pending",
          "video": null
        }
      ]
    }
  ]
