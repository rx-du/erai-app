      "title": "Critical Signs",
      "type": "list",
      "items": [
        "Altered level of consciousness",
        "Unequal or non-reactive pupils",
        "Clear fluid from ears/nose (CSF leak)",
        "Raccoon eyes or Battle’s sign",
        "Severe headache or vomiting"
      ]
    },
    {
      "title": "Immediate Actions",
      "type": "list",
      "items": [
        "Scene safety and C-spine control",
        "Glasgow Coma Scale assessment",
        "Airway management with C-spine",
        "Neurological baseline establishment",
        "Rapid transport preparation"
      ]
    }
