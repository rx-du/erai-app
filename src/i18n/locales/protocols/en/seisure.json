{
  "id": "seizure",
  "title": "Seizure",
  "category": [
    {
      "name": "Recognize seizure types",
      "sections": [
        {
          "title": "High Priority",
          "type": "text",
          "content": "Seizures require immediate protection and monitoring. Status epilepticus (>5 minutes) is a medical emergency."
        },
        {
          "title": "Status epilepticus",
          "type": "text",
          "content": "Seizure > 5 minutes or repeated seizures."
        },
        {
          "title": "Generalized tonic-clonic",
          "type": "text",
          "content": "Full body convulsions, loss of consciousness."
        },
        {
          "title": "Focal Seizure",
          "type": "text",
          "content": "Partial seizure, may remain conscious."
        },
        {
          "title": "Febrile Seizure",
          "type": "text",
          "content": "Fever-induced seizure in children."
        }
      ]
    },
    {
      "name": "Critical assessment points",
      "sections": [
        {
          "title": "Primary survey",
          "type": "list",
          "items": [
            "Airway patency and protection",
            "Breathing rate and effort",
            "Circulation and perfusion",
            "Neurological status (GCS)",
            "Blood glucose level"
          ]
        },
        {
          "title": "Immediate priorities",
          "type": "list",
          "items": [
            "Protect from injury – pad/cushion",
            "Maintain airway – suction if needed",
            "Monitor oxygen saturation",
            "Establish IV access",
            "Check blood glucose"
          ]
        }
      ]
    }
  ],
